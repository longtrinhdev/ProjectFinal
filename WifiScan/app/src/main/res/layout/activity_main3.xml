<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3FAF8"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/txt_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#A5DD9B"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="12dp"
        android:text="Danh sách wifi thu thập được"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="60dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26sp"
        android:layout_above="@+id/rcv_list_wifi"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_height="55dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/wifi_scanner"
            android:padding="12dp"
            android:background="@drawable/custom_button"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:text="Tiếp tục quét"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_thoat"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:drawableStart="@drawable/logout"
            android:padding="12dp"
            android:drawablePadding="4dp"
            android:layout_height="55dp"
            android:background="@drawable/custom_button"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:text="Thoát"/>

    </LinearLayout>
</RelativeLayout>