<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/hinh2"

    tools:context=".activity_update">

    <EditText
        android:id="@+id/edt_update_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Họ tên"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edt_update_que_quan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Quê quán"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edt_update_chuc_vu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Chức vụ"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edt_update_so_dien_thoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edt_update_tai_khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edt_update_mat_khau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="22sp" />
    <TextView
        android:id ="@+id/txt_status_update_user"
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text = "Update chưa đúng"
        android:layout_marginTop="8dp"
        android:gravity ="center"
        android:visibility = "gone"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_update_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:text="Update" />
</LinearLayout>